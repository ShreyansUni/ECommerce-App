<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ECommerce_App"
             xmlns:pages="clr-namespace:ECommerce_App.Pages"
             x:Class="ECommerce_App.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
    <Application.MainPage>
        <Shell>
            <TabBar x:Name="Tabs">
                <Tab Title="Home" Icon="dotnet_bot.png">
                    <ShellContent ContentTemplate="{DataTemplate local:MainPage}"/>
                </Tab>
                <Tab Title="PoductList" Icon="dotnet_bot.png">
                    <ShellContent ContentTemplate="{DataTemplate pages:ProductListPage}"/>
                </Tab>
                <Tab Title="ProductDetails" Icon="dotnet_bot.png">
                    <ShellContent ContentTemplate="{DataTemplate pages:ProductDetailsPage}"/>
                </Tab>
                <Tab Title="Profile" Icon="dotnet_bot.png">
                    <ShellContent ContentTemplate="{DataTemplate pages:ProfilePage}"/>
                </Tab>
                <Tab Title="Settings" Icon="dotnet_bot.png">
                    <ShellContent ContentTemplate="{DataTemplate pages:SettingsPage}"/>
                </Tab>
            </TabBar>
        </Shell>
    </Application.MainPage>
</Application>
