    --><!-- Cart Tab --><!--
    <ContentPage Title="Cart">
        <StackLayout>
            <Label Text="Your Cart is Empty" FontSize="18" HorizontalOptions="Center" VerticalOptions="CenterAndExpand"/>
        </StackLayout>
    </ContentPage>

