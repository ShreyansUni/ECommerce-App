<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ECommerce_App.Pages.ProfilePage"
             Title="ProfilePage">
    <VerticalStackLayout Padding="20">
        <Image Source="profile_placeholder.png" HeightRequest="100" WidthRequest="100" HorizontalOptions="Center"/>
        <Label Text="Mark Adam" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center"/>
        <Label Text="Email: markadam@example.com" FontSize="14" HorizontalOptions="Center"/>
        <Button Text="Edit Profile" BackgroundColor="#4F46E5" TextColor="White" Margin="0,20,0,0" />
        <Button Text="Logout" TextColor="Red" />
    </VerticalStackLayout>
</ContentPage>